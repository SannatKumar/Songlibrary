@page
@model EditModel


<br />
<h2 class="text-info">Edit Song</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type ="hidden" asp-for="Song.Id" />
        <div class=" text-danger" asp-validation-summary="ModelOnly"></div>
        <div class=" form-group row">
            <div class=" col-4">
                <label asp-for=" Song.Title"></label>
            </div>
            <div class=" col-6">
                <input asp-for=" Song.Title" class="form-control" />
            </div>
            <span asp-validation-for="Song.Title" class="text-danger"></span>
        </div>
        <div class=" form-group row">
            <div class=" col-4">
                <label asp-for=" Song.Artist"></label>
            </div>
            <div class=" col-6">
                <input asp-for=" Song.Artist" class="form-control" />
            </div>
            <span asp-validation-for="Song.Artist" class="text-danger"></span>
        </div>
        <div class=" form-group row">
            <div class=" col-4">
                <label asp-for=" Song.Lyrics"></label>
            </div>
            <div class=" col-6">
                <input asp-for=" Song.Lyrics" class="form-control" />
            </div>
            <span asp-validation-for="Song.Lyrics" class="text-danger"></span>
        </div>
        <div class=" form-group row">
            <div class=" col-3 offset-4">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class=" col-3 ">
                <a asp-page="Index" class="btn btn-success form-control">Back To List</a>
            </div>
        </div>

    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}