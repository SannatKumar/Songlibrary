@page
@model WebsiteCrud.CreateModel


<br />
<h2 class="text-info">Create New Song</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class=" form-group row">
            <div class=" col-4">
                <label asp-for=" Song.Title"></label>
            </div>
            <div class=" col-6">
                <label asp-for=" Song.Title" class="form-control"></label>
            </div>
        </div>
        <div class=" form-group row">
            <div class=" col-4">
                <label asp-for=" Song.Artist"></label>
            </div>
            <div class=" col-6">
                <label asp-for=" Song.Artist" class="form-control"></label>
            </div>
        </div>
        <div class=" form-group row">
            <div class=" col-4">
                <label asp-for=" Song.Lyrics"></label>
            </div>
            <div class=" col-6">
                <label asp-for=" Song.Lyrics" class="form-control"></label>
            </div>
        </div>
            <div class=" form-group row">
                <div class=" col-3 offset-4">
                    <input type="submit" value="Create" class="btn btn-primary form-control" />
                </div>
                <div class=" col-3 ">
                    <a asp-page=" Index" class="btn btn-success form-control">Back To List</a>
                </div>
            </div>
     
       </form>
    </div>



