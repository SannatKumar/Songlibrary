@page
@model WebsiteCrud.IndexModel



<br />
<div class="container row p-0 m-0">
    <div class=" col-9">
        <h2 class="text-info">Song List</h2>
    </div>
    <div class=" col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white"> Create New Song</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if(Model.Songs.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Songs.FirstOrDefault().Title"></label>
                        </th>
                        <th>
                            <label asp-for="Songs.FirstOrDefault().Artist"></label>
                        </th>
                        <th>
                            <label asp-for="Songs.FirstOrDefault().Lyrics"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach(var item in Model.Songs)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Artist)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Lyrics)
                    </td>
                    <td>
                        <button asp-page-handler ="Delete" asp-route-id="@item.Id"onClick ="return confirm('Are you sure you want to delete?" class="btn btn-danger btn-sm">Delete</button>
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn  btn-success btn-sm">Edit</a>
                    </td>
                </tr>
                    }
                </table>

            }
            else
            {
                <p>No Books Available.</p>
            }
        </form>
    </div>
</div>

